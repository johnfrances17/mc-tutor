{
  "version": 2,
  "builds": [
    {
      "src": "server/src/server.ts",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/server.ts"
    },
    {
      "src": "/html/(.*)",
      "dest": "public/html/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "public/css/$1"
    },
    {
      "src": "/styles/(.*)",
      "dest": "public/styles/$1"
    },
    {
      "src": "/scripts/(.*)",
      "dest": "public/scripts/$1"
    },
    {
      "src": "/",
      "dest": "public/html/index.html"
    }
  ]
}
