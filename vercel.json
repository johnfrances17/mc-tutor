{
  "version": 2,
  "buildCommand": "cd server && npm install && npm run build",
  "installCommand": "cd server && npm install",
  "builds": [
    {
      "src": "server/dist/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/dist/server.js"
    },
    {
      "src": "/html/(.*)",
      "dest": "public/html/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "public/css/$1"
    },
    {
      "src": "/styles/(.*)",
      "dest": "public/styles/$1"
    },
    {
      "src": "/scripts/(.*)",
      "dest": "public/scripts/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "public/assets/$1"
    },
    {
      "src": "/",
      "dest": "public/html/index.html"
    }
  ]
}
