{
  "version": 2,
  "installCommand": "npm install --prefix server",
  "buildCommand": "npm run build --prefix server",
  "functions": {
    "api/index.js": {
      "includeFiles": "server/dist/**"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}