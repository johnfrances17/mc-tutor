{
  "version": 2,
  "installCommand": "npm install && cd server && npm install",
  "buildCommand": "cd server && npm run build",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/html/(.*)",
      "dest": "/public/html/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "public/css/$1"
    },
    {
      "src": "/styles/(.*)",
      "dest": "public/styles/$1"
    },
    {
      "src": "/scripts/(.*)",
      "dest": "public/scripts/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "public/assets/$1"
    },
    {
      "src": "/",
      "dest": "public/html/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}